<h2>List of Products by Merchant</h2>

<nav>
  <ul>
    <li><%= link_to "All Products", products_path%></li>
    <li><%= link_to "Products by Category", bycategory_path%></li>
    <li><%= link_to "Products by Merchant", bymerchant_path%></li>
    <% if @current_user && @current_user.type == "Merchant"%>
      <li><%= link_to "Add New Category", new_category_path%></li>
      <li><%= link_to "Add New Product", new_user_product_path(@current_user.id)%> </li>
    <%end%>
  </ul>
</nav>

<% @products_by_merchant.each do |key, value|%>
  <secion class="product_list">
  <h4><%="#{key.name}"%></h4>
  <table class="table-striped">
    <thead>
       <tr>
         <th>Product Name</th>
         <th>Category</th>
         <th>Price</th>
         <th>Review</th>
       </tr>
     </thead>
      <tbody>
        <% value.each do |product|%>
          <tr>
            <td><%= link_to "#{product.name}", product_path(product.id) %></td>
            <td><%= link_to "#{product.category.name}", user_path(product.user.id) %></td>
            <td><%= product.price %></td>
            <td></td>
          </tr>
        <%end%>
      </tbody>
   </table>
  </secion>
<%end%>
