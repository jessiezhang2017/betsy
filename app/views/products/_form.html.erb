
<h1> <%= action_name %> </h1>


<%= render partial: "layouts/form_errors", locals: { model: @product } %>

<%= form_with model: @product, class: "product-form"  do |f|%>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :categories %>
  <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>

  <%= f.label :description %>
  <%= f.text_field :description%>

  <%= f.label :price %>
  <%= f.text_area :price %>

  <%= f.label :stock %>
  <%= f.text_area :stock %>

  <%= f.label :photo_url %>
  <%= f.text_area :photo_url %>

  <%= f.submit button_title, class: "btn btn-primary" %>
<% end %>
