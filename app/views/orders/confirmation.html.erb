<section>
  <h2>Confirmation: We've placed your order!</h2>
  <p>Order number: <%= "#{@paid_order.id}" %></p>
  <p>Submitted on: <%= "#{@paid_order.updated_at}" %></p>
  <p>Status: <%= "#{@paid_order.status}" %></p>
</section>

<section>
  <% @paid_order.order_products.each do |op| %>
    <article class="cart card">
      <div class="row no-gutters">
        <div class="col-auto">
          <img src="https://vignette.wikia.nocookie.net/aceattorney/images/f/f7/Missile_AAI.png/revision/latest?cb=20180304065441" alt="Product" height="100px">
        </div>
        <div class="col">
          <div class="card-block px-2">
            <h5 class="card-title"><%= link_to "#{op.product.name}", product_path(op.product.id) %></h5>
            <section class="card-text">
              <p><%= "Price: #{op.product.price}" %></p>
              <p><%= "Quantity: #{op.quantity}" %></p>
              <p><%= "Subtotal: #{op.subtotal}" %></p>
            </section>
          </div>
        </div>
      </div>
      <div class="card-footer w-100 text-muted">
        <p>
          Add order product status here and option to cancel.
        </p>
      </div>
    </article>
  <% end %>
</section>

<section>
  <p>Total: <%= "#{@paid_order.total}" %></p>
</section>
